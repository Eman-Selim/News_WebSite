
@model List<News>
<section id="about" class="about">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="section-title">
            <h2> @ViewBag.cat أخبار </h2>
        </div>
        @foreach(var item in Model)
        {

            <div class="row">
                <div class="col-lg-6 aos-init aos-animate" data-aos="fade-right">
                    <img src="" class="img-fluid" alt="">
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0 content aos-init aos-animate" data-aos="fade-left">
                    <h3>@item.Title</h3>
                    <p class="fst-italic">
                        @item.Topic
                    </p>
                    
                </div>
                <center>
                    <a class"btn btn-danger" href="/Home/NewsDelete/@item.Id">Delete</a>
                </center>
            </div>
            

        }
    </div>
</section>